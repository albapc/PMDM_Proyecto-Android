<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/reto4"
        android:layout_width="109dp"
        android:layout_height="111dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:contentDescription="@string/pixelheart"
        android:padding="20dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.62"
        app:layout_constraintStart_toEndOf="@+id/reto1"
        app:layout_constraintTop_toBottomOf="@+id/reto2"
        app:layout_constraintVertical_bias="0.231"
        app:srcCompat="@drawable/yellowstar" />

    <ImageButton
        android:id="@+id/reto3"
        android:layout_width="109dp"
        android:layout_height="111dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:contentDescription="@string/pixelheart"
        android:padding="20dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/reto2"
        app:layout_constraintHorizontal_bias="0.263"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/reto4"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/yellowstar" />

    <ImageButton
        android:id="@+id/reto2"
        android:layout_width="109dp"
        android:layout_height="111dp"
        android:layout_marginTop="228dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:contentDescription="@string/pixelheart"
        android:padding="20dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.62"
        app:layout_constraintStart_toEndOf="@+id/reto1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/yellowstar" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/instrucciones"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.116"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.046" />

    <ImageButton
        android:id="@+id/reto1"
        android:layout_width="109dp"
        android:layout_height="111dp"
        android:layout_marginTop="228dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:contentDescription="@string/pixelheart"
        android:padding="20dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.115"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/yellowstar" />


</androidx.constraintlayout.widget.ConstraintLayout>